{% extends 'AnnonceBase.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}
    <h1>Annonce index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Montant</th>
                <th>Prix</th>
                <th>Datetime</th>
                <th>Username</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.user }}</td>
                <td>{{ annonce.montant }}</td>
                <td>{{ annonce.prix }}</td>
                <td>{{ annonce.datetime ? annonce.datetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ annonce.username }}</td>
                <td>{{ annonce.status }}</td>
                <td>
                    <a href="{{ path('app_annonce_show', {'id': annonce.id}) }}">show</a>
                    <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_annonce_new') }}">Create new</a>
{% endblock %}
