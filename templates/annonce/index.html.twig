{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>

 body, html {
    height: 100%;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #f4f4f4;
}



    /* Main container styling */
    .main {
        width: 60%; /* Smaller width for the main container */
        background-color: #ffffff;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        align-items: center; /* Centering content within the container */
        margin: auto; /* This will help in ensuring the margin is auto calculated */
        overflow: hidden; /* Ensures no child element leaks outside the boundary */
    }


    /* Styles for search box with icon inside */
    .has-search .form-control {
        padding-left: 40px; /* Space for the search icon */
    }

    .has-search .form-control-feedback {
        position: absolute;
        z-index: 2;
        display: block;
        top: 50%;
        left: 10px;
        transform: translateY(-50%);
        width: 20px;
        height: 20px;
        line-height: 20px;
        text-align: center;
        pointer-events: none;
        color: #aaa;
    }

    /* Enhanced visibility for input and button */
    .input-group .form-control {
        border: 1px solid #ccc; /* Subtle borders for input */
        background-color: #fff; /* White background for input */
    }

    .input-group-append .btn {
        color: #fff;
        background-color: #007bff; /* Using a bootstrap primary color */
    }

    .table-container {
        display: flex;
        justify-content: center; /* Centers the table horizontally */
        align-items: center; /* Centers the table vertically */
        width: 100%; /* Full width to ensure centering */
        padding: 20px; /* Padding around the container */
    }


    /* Table styling for better readability and aesthetics */
    .custom-table {
        width: 100%;
        margin-top: 20px 0; /* Space between search form and table */
        border-collapse: collapse; /* Remove spaces between borders */
    }

    .custom-table th, .custom-table td {
        padding: 12px; /* Sufficient padding for clarity */
        border-bottom: 1px solid #ddd;
        text-align: center;
    }

    .custom-table th {
        background-color: #007bff; /* Header background */
        color: white; /* Text color for header */

    }
    .btn a {
        color: inherit; /* Ensures link colors match the button */
        text-decoration: none; /* No underline on links */
    }

</style>
{% endblock %}

{% block NewAnnonce %}

<div class="row">
    <div id="recent-transactions" class="col-12">
        <h2 class="my-2">Nouvelles Annonces</h2>
        <div class="card-content">
                <div class="table-responsive">
                    <table id="recent-orders" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th class="border-top-0">Annonce ID</th>
                                <th class="border-top-0">Username</th>
                </div>

<div class="main">
    <h1>Annonces</h1>
    <div class="table-container">
    <table class="market-table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Montant</th>
                <th>Prix</th>
                <th>Datetime</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.username }}</td>
                <td>{{ annonce.montant }}</td>
                <td>{{ annonce.prix }}</td>
                <td>{{ annonce.datetime ? annonce.datetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ annonce.status }}</td>
                <td>
                    <button type="button" class="btn btn-outline-primary"><a href="{{ path('app_annonce_show', {'id': annonce.id}) }}">Show</a></button>
                    <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#exampleModal">Edit</button>
                    <button type="button" class="btn btn-outline-danger" onclick="deleteAnnounce({{ annonce.id }})">Delete</button>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete-item') }}">

    <button type="button" class="btn btn-primary"><a href="{{ path('app_annonce_new') }}">Create new</a></button>
</div>

<!-- Enhanced Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this announcement? This action cannot be undone.</p>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete-item') }}">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<!-- Your custom script here -->
<script>
function deleteAnnounce(id) {
    $('#deleteModal').modal('show');
    $('#confirmDelete').off('click').on('click', function() {
        $('#deleteModal').modal('hide');
        var csrfToken = document.querySelector('input[name="_csrf_token"]').value; // Ensure this input exists
        console.log("Deleting ID: " + id + " with CSRF: " + csrfToken); // Debugging output
        var xhr = new XMLHttpRequest();
        xhr.open("POST", "{{ path('app_annonce_delete', {'id': 'placeholder'}) }}".replace('placeholder', id), true);
        xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
        xhr.onreadystatechange = function() {
            if (xhr.readyState === XMLHttpRequest.DONE) {
                var message = xhr.status === 200 ? 'Announcement deleted successfully.' : 'An error occurred while deleting the announcement.';
                alert(message);
                window.location.reload();
            }
        };
        xhr.send("id=" + id + "&_token=" + csrfToken);
    });
}

function performSearch() {
    var query = document.getElementById('blogSearchInput').value;
    window.location.href = '{{ path('app_annonce_index') }}?username=' + encodeURIComponent(query);
}


</script>

